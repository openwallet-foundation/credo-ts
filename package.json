{
  "name": "aries-framework",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "url": "https://github.com/hyperledger/aries-framework-javascript",
    "type": "git"
  },
  "scripts": {
    "check-types": "lerna exec tsc -- --noEmit",
    "prettier": "prettier --ignore-path .gitignore '**/*.+(js|json|ts|md|yml|yaml)'",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "lerna publish",
    "test": "jest",
    "lint": "eslint --ignore-path .gitignore .",
    "validate": "yarn lint && yarn check-types && yarn check-format",
    "prepare": "husky install",
    "run-mediator": "ts-node ./tests/mediator.ts",
    "run-mediator-ws": "ts-node ./tests/mediator-ws.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/eslint": "^7.2.13",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "express": "^4.17.1",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.0",
    "uuid": "^8.3.2",
    "ws": "^7.4.6"
  },
  "engines": {
    "node": ">= 12"
  }
}
