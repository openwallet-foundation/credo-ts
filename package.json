{
  "name": "aries-framework-javascript",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build/src"
  ],
  "scripts": {
    "compile": "tsc",
    "lint": "eslint --ignore-path .gitignore '**/*.+(js|ts)'",
    "prettier": "prettier --ignore-path .gitignore '**/*.+(js|json|ts)'",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "test": "jest --verbose",
    "dev": "ts-node-dev --respawn --transpile-only ./src/samples/mediator.ts",
    "prod:start": "node ./build/samples/mediator.js",
    "prod:start-mediation-client": "node ./build/samples/mediation-client.js",
    "prod:start-mediation-server": "node ./build/samples/mediation-server.js",
    "prod:build": "rm -rf build && yarn compile",
    "validate": "npm-run-all --parallel lint compile",
    "prepack": "rm -rf build && yarn compile",
    "prepare": "husky install"
  },
  "dependencies": {
    "bn.js": "^5.2.0",
    "buffer": "^6.0.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "events": "^3.3.0",
    "js-sha256": "^0.9.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/cors": "^2.8.10",
    "@types/express": "4.17.8",
    "@types/indy-sdk": "^1.15.2",
    "@types/jest": "^26.0.20",
    "@types/node-fetch": "^2.5.8",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "express": "^4.17.1",
    "husky": "^5.1.3",
    "indy-sdk": "^1.16.0",
    "jest": "^26.6.3",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rxjs": "^6.6.6",
    "ts-jest": "^26.5.3",
    "ts-node-dev": "^1.1.6",
    "tslog": "^3.1.2",
    "typescript": "^4.2.3"
  }
}
