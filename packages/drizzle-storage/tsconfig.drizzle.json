{
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node"],
    "allowJs": true,
    "module": "commonjs",
    "target": "ES2020",
    "lib": [],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useUnknownInCatchVariables": false
  }
}
