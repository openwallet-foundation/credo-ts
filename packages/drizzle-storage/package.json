{
  "name": "@credo-ts/drizzle-storage",
  "version": "0.5.13",
  "files": [
    "build",
    "cli-build",
    "migrations",
    "types",
    "bin.mjs",
    "didcomm.js",
    "didcomm.d.ts",
    "action-menu.js",
    "action-menu.d.ts",
    "core.js",
    "core.d.ts",
    "drpc.js",
    "drpc.d.ts",
    "tenants.js",
    "tenants.d.ts",
    "openid4vc.js",
    "openid4vc.d.ts",
    "anoncreds.js",
    "anoncreds.d.ts",
    "question-answer.js",
    "question-answer.d.ts"
  ],
  "license": "Apache-2.0",
  "description": "Credo storage service implementation based on Drizzle ORM, supporting PostgreSQL and SQLite",
  "bin": "./bin.mjs",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "cli": "./build/index.mjs"
    },
    "./didcomm": { "import": "./build/didcomm/bundle.mjs" },
    "./action-menu": { "import": "./build/action-menu/bundle.mjs" },
    "./core": { "import": "./build/core/bundle.mjs" },
    "./drpc": { "import": "./build/drpc/bundle.mjs" },
    "./tenants": { "import": "./build/tenants/bundle.mjs" },
    "./openid4vc": { "import": "./build/openid4vc/bundle.mjs" },
    "./anoncreds": { "import": "./build/anoncreds/bundle.mjs" },
    "./question-answer": { "import": "./build/question-answer/bundle.mjs" }
  },
  "publishConfig": {
    "access": "public",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "module": "./build/index.mjs",
    "exports": {
      ".": {
        "import": "./build/index.mjs",
        "require": "./build/index.js",
        "types": "./build/index.d.ts"
      },
      "./didcomm": { "import": "./build/didcomm/bundle.mjs" },
      "./action-menu": { "import": "./build/action-menu/bundle.mjs" },
      "./core": { "import": "./build/core/bundle.mjs" },
      "./drpc": { "import": "./build/drpc/bundle.mjs" },
      "./tenants": { "import": "./build/tenants/bundle.mjs" },
      "./openid4vc": { "import": "./build/openid4vc/bundle.mjs" },
      "./anoncreds": { "import": "./build/anoncreds/bundle.mjs" },
      "./question-answer": { "import": "./build/question-answer/bundle.mjs" },
      "./package.json": "./package.json"
    }
  },
  "homepage": "https://github.com/openwallet-foundation/credo-ts/tree/main/packages/drizzle-storage",
  "repository": {
    "type": "git",
    "url": "https://github.com/openwallet-foundation/credo-ts",
    "directory": "packages/drizzle-storage"
  },
  "scripts": {
    "build": "tsdown",
    "prepublishOnly": "pnpm run build",
    "cli:local": "node --conditions cli bin.mjs --bundle core --bundle didcomm --bundle anoncreds --bundle action-menu --bundle question-answer --bundle drpc --bundle tenants --bundle openid4vc",
    "cli:local:generate": "pnpm cli:local generate",
    "cli:dev:migrate:postgres": "pnpm cli:local migrate --dialect postgres --database-url \"postgresql://postgres:postgres@localhost:5432/postgres\"",
    "cli:local:migrate:sqlite": "pnpm cli:local migrate --dialect sqlite --database-url \"file:local.db\"",
    "cli:local:studio:postgres": "pnpm cli:local studio --dialect postgres --database-url \"postgresql://postgres:postgres@localhost:5432/postgres\"",
    "cli:local:studio:sqlite": "pnpm cli:local studio --dialect sqlite --database-url \"file:../../db.db\""
  },
  "dependencies": {
    "@credo-ts/action-menu": "workspace:*",
    "@credo-ts/anoncreds": "workspace:*",
    "@credo-ts/core": "workspace:*",
    "@credo-ts/didcomm": "workspace:*",
    "@credo-ts/drpc": "workspace:*",
    "@credo-ts/openid4vc": "workspace:*",
    "@credo-ts/question-answer": "workspace:*",
    "@credo-ts/tenants": "workspace:*",
    "class-transformer": "catalog:",
    "class-validator": "catalog:",
    "drizzle-kit": "^0.31.4",
    "shell": "^0.12.0",
    "tsyringe": "catalog:",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.44.5"
  },
  "devDependencies": {
    "@libsql/client": "^0.15.6",
    "@types/pg": "^8.15.4",
    "@types/yargs": "^17.0.33",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3",
    "typescript": "catalog:"
  }
}
